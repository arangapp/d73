[Unit]
Description = ${component} Service
[Service]
${component}=roboshop
Environment=MONGO=true
Environment=${component}_HOST="${component}-dev.adevlearn.shop"
Environment=MONGO_URL="mongodb-dev.adevlearn.shop:27017/users"
ExecStart=/bin/node /app/server.js
SyslogIdentifier=${component}

[Install]
WantedBy=multi-${component}.target